{config, lib, ...}: let
   fstOpt= "en_IL.UTF-8";
   sdnOpt= "eh_IL.UTF-8";
   trdOpt= "en_US.UTF-8";
in
{
  # Israel time zone
    time.timeZone = "Asia/Jerusalem";
    i18n.defaultLocale = trdOpt;
    i18n.extraLocaleSettings = {
      LC_ADDRESS = fstOpt;
      LC_IDENTIFICATION = fstOpt;
      LC_MEASUREMENT = fstOpt;
      LC_MONETARY = sdnOpt;
      LC_NAME = fstOpt;
      LC_NUMERIC = fstOpt;
      LC_PAPER = fstOpt;
      LC_TELEPHONE = fstOpt;
      LC_TIME = sdnOpt;
    };
}
